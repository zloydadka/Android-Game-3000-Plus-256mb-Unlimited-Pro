public abstract class GameObject {
//	private final Drawable d;
	public Point pt;
	public int w, h;

	public void move(int i, int j) {
		pt.x += i;
		pt.y += j;
		
		d.setBounds(pt.x, pt.y, pt.x + w, pt.y + h);
	}

	public GameObject() {
		Log.e("GameObject", "created");
//		this.d = d;
//		w = d.getIntrinsicWidth();
