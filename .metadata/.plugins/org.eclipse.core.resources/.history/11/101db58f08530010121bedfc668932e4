package com.superdeveloperz.supergame;

import java.util.ArrayList;

import android.app.ListActivity;
import android.content.Context;
import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;
import android.os.Bundle;
import android.util.Log;
import android.widget.ArrayAdapter;
import android.widget.ListView;

public class StartActivity extends ListActivity {

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);

		ListView listView = getListView();

		Context context = listView.getContext();
		SQLiteHelper sqliteHelper = new SQLiteHelper(context);
		SQLiteDatabase db = sqliteHelper.getWritableDatabase();
		Cursor query = db.query("TEXTS", new String[] { "name", "text" }, null,
				null, null, null, null);
		query.moveToFirst();
		
		ArrayAdapter<String> arrAdapter = new ArrayAdapter<String>(context, R.layout.list_item);
		while (query.moveToNext()) {
			String name = query.getString(0);
			String text = query.getString(0);
				listView.add 
				
				
				
				
		}
		Log.e("GameManager.query", "query = " + text);
		query.close();
		db.close();

	}
}
